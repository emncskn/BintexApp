
@model List<RoleListViewModel>
@{
    Layout = "~/Views/Shared/LayoutPanel.cshtml";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kullanıcı Rolleri</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                       <a class="btn btn-primary" href="Account/AddRole">

                            <i class="fa fa-plus"></i>
                           Rol Ekle</a>
                    </div>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Rol Adı</th>
                            <th>İşlemler</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                      @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>
                                    <a href="/Account/UpdateRole/@item.Id" class="btn btn-success">Güncelle</a>
                                    <a href="/Account/DeleteRole/@item.Id" class="btn btn-danger">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>